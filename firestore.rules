
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the superadmin
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'eljabbaryhicham@example.com';
    }

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // SUPERADMIN OVERRIDE: Superadmin has universal read/write access to everything.
    // This rule is checked first and provides a master key.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // Projects: Publicly readable, writable by admins.
    match /projects/{projectId} {
      allow get, list: if true;
      allow write: if isSignedIn() && !isSuperAdmin();
    }

    // Contact: Publicly readable, writable by admins.
    match /contact/{contactId} {
      allow get, list: if true;
      allow write: if isSignedIn() && !isSuperAdmin();
    }

    // Homepage: Publicly readable, writable by admins.
    match /homepage/{settingsId} {
      allow get, list: if true;
      allow write: if isSignedIn() && !isSuperAdmin();
    }

    // About: Publicly readable, writable by admins.
    match /about/{contentId} {
      allow get, list: if true;
      allow write: if isSignedIn() && !isSuperAdmin();
    }

    // Clients: Publicly readable, writable by admins.
    match /clients/{clientId} {
      allow get, list: if true;
      allow write: if isSignedIn() && !isSuperAdmin();
    }

    // Media: Readable by admins, with specific create/delete permissions.
    match /media/{mediaId} {
      allow list, get: if isSignedIn() && !isSuperAdmin();
      allow create: if isSignedIn() && !isSuperAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.canUploadMedia == true;
      allow delete: if isSignedIn() && !isSuperAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.canDeleteMedia == true;
      allow update: if false;
    }

    // Users:
    match /users/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow list: if isSignedIn() && !isSuperAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;
    }
  }
}
