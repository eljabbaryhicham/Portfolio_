rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow get: if true;
    }

    // Allow authenticated users to write to the 'uploads' directory
    match /uploads/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
